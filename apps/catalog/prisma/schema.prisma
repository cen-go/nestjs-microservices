generator client {
  provider = "prisma-client-js"
  // Generate the client into a unique folder to avoid conflicts
  output   = "../../../node_modules/@prisma/catalog-db-client"
}

datasource db {
  provider = "postgresql"
  url      = env("CATALOG_DATABASE_URL")
}

enum ProductStatus {
  ACTIVE
  INACTIVE
  DRAFT
}


model Product {
  id          String   @id @default(cuid())
  name        String
  description String
  price       Int
  status      ProductStatus @default(DRAFT)
  imageUrl    String?
  userId      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
