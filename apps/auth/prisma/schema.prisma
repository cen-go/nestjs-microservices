generator client {
  provider = "prisma-client-js"
  // Generate the client into a unique folder to avoid conflicts
  output   = "../../../node_modules/@prisma/auth-db-client"
}

datasource db {
  provider = "postgresql"
  url      = env("AUTH_DATABASE_URL")
}

enum Role {
  ADMIN
  USER
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  userName  String   @unique
  password  String
  role      Role     @default(USER)
  lastSeen  DateTime @default(now())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
